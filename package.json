{
  "name": "ultimate-erp",
  "main": "dist/electron/main.js",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:ultimate-erp": "node dist/ultimate-erp/server/server.mjs",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:start": "npm run build && npm run electron:build && electron ./dist/electron/main.js",
    "electron:dev": "concurrently \"ng serve\" \"tsc -w -p electron/tsconfig.json\" \"wait-on http://localhost:4200 && electron ./dist/electron/main.js\"",
    "electron:package": "npm run build && npm run electron:build && electron-builder"
  },
  "build": {
    "appId": "osroot.erp",
    "productName": "OS-ERP",
    "files": [
      "dist/**/*",
      "dist/electron/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "./build/icon.ico",
      "signAndEditExecutable": false
    }
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.3",
    "@angular/common": "^20.2.0",
    "@angular/compiler": "^20.2.0",
    "@angular/core": "^20.2.0",
    "@angular/forms": "^20.2.0",
    "@angular/material": "^20.2.3",
    "@angular/platform-browser": "^20.2.0",
    "@angular/platform-server": "^20.2.0",
    "@angular/router": "^20.2.0",
    "@angular/service-worker": "^20.2.0",
    "@angular/ssr": "^20.2.1",
    "animate.css": "^4.1.1",
    "express": "^5.1.0",
    "idb": "^8.0.3",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.2.1",
    "@angular/cli": "^20.2.1",
    "@angular/compiler-cli": "^20.2.0",
    "@capacitor-community/electron": "^5.0.1",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "concurrently": "^9.2.1",
    "electron": "^38.1.0",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2",
    "wait-on": "^8.0.5"
  }
}
